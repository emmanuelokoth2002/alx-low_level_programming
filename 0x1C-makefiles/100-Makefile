CC := gcc
SRC := $(wildcard *.c)
OBJ := $(patsubst %.c, %.o, $(SRC))
NAME := school
CFLAGS := -Wall -Werror -Wextra -pedantic
.PHONY: all clean fclean oclean re
all: $(NAME)
$(NAME): $(OBJ)
	$(CC) $(CFLAGS) -o $@ $^
$(OBJ): %.o: %.c | m.h
	$(CC) $(CFLAGS) -c -o $@ $<
clean:
	-@$(RM) $(NAME) *~ \#*\#
oclean:
	-@$(RM) $(OBJ)
fclean: clean oclean
re: fclean all

