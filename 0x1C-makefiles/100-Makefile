CC = gcc
SRC = $(*.c)
OBJ = $(SRC:.c=.o)
NAME = school
CFLAGS = -Wall -Werror -Wextra -pedantic
.PHONY: all clean fclean oclean re
all: $(NAME)
$(NAME): $(OBJ)
	$(CC) $(CFLAGS) -o $@ $^
%.o: %.c m.h
	$(CC) $(CFLAGS) -c -o $@ $<
clean:
	-@$(RM) -f $(OBJ) $(NAME) *~ \#*\#
oclean:
	-@$(RM) -f $(OBJ)
fclean: clean
re: fclean all
